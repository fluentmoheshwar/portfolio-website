---
import MainLayout from "../layouts/Main.astro";
---

<MainLayout
  lang="en"
  title="Error 404 - Page not found!"
  description="The page you're looking for seems to have vanished into the digital blackhole. Let's get you back to familiar territory."
  socialImage="/social_images/home.png"
  keywords="404"
>
  <meta
    http-equiv="refresh"
    content="15; url=https://www.youtube.com/watch?v=dQw4w9WgXcQ"
  />
  <div class="flex min-h-screen items-center justify-center px-6">
    <div class="space-y-10 text-center">
      <div class="relative">
        <h1 class="text-9xl font-bold text-white opacity-20">404</h1>
        <h1
          class="absolute top-0 left-0 w-full animate-pulse text-9xl font-bold text-pink-500"
        >
          404
        </h1>
      </div>
      <div class="space-y-6">
        <h2 class="text-3xl font-semibold text-white">Oops! Page Not Found</h2>
        <p class="mx-auto max-w-lg text-gray-400">
          The page you're looking for seems to have vanished into the digital
          blackhole. Let's get you back to familiar territory.
        </p>
      </div>
      <div class="pt-6">
        <a
          href="/"
          class="btn btn-primary px-8 py-3 text-white shadow-lg transition-colors duration-200 hover:shadow-pink-500/30"
        >
          Return Home
        </a>
      </div>
    </div>
  </div>
</MainLayout>
