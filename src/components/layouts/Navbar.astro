---
const username = "fluentmoheshwar";
import {
  FaFacebook,
  FaGithub,
  FaHouse,
  FaInstagram,
  FaNewspaper,
  FaThreads,
  FaUser,
  FaXTwitter,
  FaYoutube,
  FaBluesky,
} from "react-icons/fa6";
import { GoLinkExternal } from "react-icons/go";
---

<nav class="navbar justify-center p-0">
  <ul
    class="menu menu-horizontal rounded-box bg-base-200 p-0 text-[10px] sm:text-base"
  >
    <li><a href="/"><FaHouse /> Home</a></li>
    <li><a href="/posts/"><FaNewspaper /> Posts</a></li>
    <li>
      <a href={`https://github.com/${username}/`} target="_blank"><FaGithub /> GitHub <GoLinkExternal /></a>
    </li>
    <li>
      <details>
        <summary><FaUser /> Social Media</summary>
        <ul class="menu menu-vertical rounded-box bg-base-200">
          <li>
            <a href={`https://facebook.com/${username}/`}
             target="_blank" ><FaFacebook /> Facebook <GoLinkExternal /></a
            >
          </li>
          <li>
            <a href={`https://twitter.com/${username}/`}
target="_blank"
              ><FaXTwitter /> Twitter/X <GoLinkExternal /></a
            >
          </li>
          <li>
            <a href={`https://www.instagram.com/${username}/`}
target="_blank"
              ><FaInstagram /> Instagram <GoLinkExternal /></a
            >
          </li>
          <li>
            <a href={`https://www.threads.net/@${username}/`}
target="_blank" 
              ><FaThreads /> Threads <GoLinkExternal /></a
            >
          </li>
          <li>
            <a href={`https://bsky.app/profile/${username}.bsky.social/`}
             target="_blank" ><FaBluesky /> Bluesky <GoLinkExternal /></a
            >
          </li>
          <li>
            <a href={`https://www.youtube.com/@${username}/`}
target="_blank" 
              ><FaYoutube /> YouTube <GoLinkExternal /></a
            >
          </li>
        </ul>
      </details>
    </li>
  </ul>
</nav>
