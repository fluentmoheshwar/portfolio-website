---
import SocialTags from "../components/layouts/SocialTags.astro"
import Navbar from "../components/layouts/Navbar.astro"
import Footer from "../components/layouts/Footer.astro"
import { ViewTransitions } from 'astro:transitions';
const {frontmatter} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
      rel="icon"
      href="/favicon.ico"
    />
    <title>{frontmatter.title}</title>
    <!-- Primary Meta Tags -->
    <meta
      name="title"
      content={frontmatter.title}
    />
    <meta
      name="description"
      content={frontmatter.description}
    />
    <SocialTags title={frontmatter.title} description={frontmatter.description} socialImage={frontmatter.image} />
    <ViewTransitions />
</head>
<body class="h-screen flex flex-col">
  <Navbar />
  <article class="prose sm:m-auto">
    <slot />
  </article>
  <Footer />
  <script src="https://kit.fontawesome.com/d105eba00c.js" crossorigin="anonymous"></script>
</body>
</html>
